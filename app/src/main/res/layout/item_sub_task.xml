<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/mid_margin"
    android:paddingRight="@dimen/mid_margin"
    android:paddingLeft="@dimen/mid_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemSubTaskDesc"
        tools:text="SubTask description"
        style="@style/ItemLayout.Black.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/itemSubTaskStatus"
        android:hint="@string/subtask_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View style="@style/divider"
          android:layout_margin="0dp"
          android:layout_marginTop="@dimen/min_margin"
        android:background="@color/colorPrimary"/>
</LinearLayout>